@*@model IEnumerable<KooliProjekt.Data.Song>*@
@model PagedResult<SongListModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Tempo
            </th>
            <th>
                Artist
            </th>
            <th>
                Storage
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Tempo
            </td>
            <td>
                @item.Artist
            </td>
            <td>
                @item.Code
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<vc:pager result="Model" view-name="Default" />
